<% include ./partials/header %>

  <div id='container'>
    <div id='head'>
      <form class='title'>
        <input type='text' value='NEW LIST' autofocus onfocus='this.value = this.value;'>
      </form>
      <div class='dropdown'>
        <button type="button" class="btn btn-default btn-lg dropdown-toggle" id="dropdownMenu1" data-toggle="dropdown">
          <span class="glyphicon glyphicon-menu-hamburger"></span>
        </button>
        <ul class="dropdown-menu">
          <li class='save'>
            <a class='save' href="#">Save</a>
          </li>

            <li class='load'>
              <a class='load' href="#">Load</a>
                <ul>
                  <li>
                    <hr class='hr'>
                  </li>
                  <% for(let i = 1; i < lists.length + 1; i++) { %>
                      <li class='item'>
                        <form  action='/lists/<%= (lists[lists.length - i])._id %>?_method=DELETE' method='POST'>
                          <button type='submit' class="fabutton">
                            <i class="fa fa-trash"></i>
                          </button>
                          <a href="#">
                            <%= (lists[lists.length - i]).listTitle %>
                          </a>
                        </form>
                      </li>
                      <% } %>
                      <% if (lists.length > 10) { %>
                      <li>
                        <hr class='hr'>
                      </li>
                      <li><a href="#">More</a></li>
                  <% } %>
                </ul>
              </li>
            </li>

          </ul>
        </div>
      </div>
      <form class='new' action='/todos' method='POST'>
        <input type="text" name='todo[content]' placeholder="Add New Todo">
      </form>
    <ul class='items'>
      <% todos.forEach(function(todo){ %>
        <li class='item'>
          <form action='/todos/<%= todo._id %>?_method=DELETE' method='POST'>
            <button type='submit' class="fabutton">
              <i class="fa fa-trash"></i>
            </button>
            <span id='<%= todo._id %>' class='<%= todo.complete ? ' complete ' : ' ' %>' data-completed='<%= todo.complete %>'><%= todo.content %></span>
          </form>
        </li>
      <% }); %>
    </ul>
  </div>

<% include ./partials/footer %>
